<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Bienvenido"
            android:textAlignment="center"
            android:textColor="#EE8DBE"
            android:textSize="30dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="125dp"
            android:src="@drawable/userprofile"
            app:civ_border_color="@color/Color1"
            app:civ_border_width="5dp" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="Perfil"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_baseline_account_circle" />

        <Button
            android:id="@+id/btnAddresse"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="Dirección"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_location" />

        <Button
            android:id="@+id/btnCards"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="Tarjetas"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_baseline_credit_card" />

        <Button
            android:id="@+id/btnChanPass"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="Cambio de Contraseña"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_baseline_key" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="Acerca de"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_baseline_info" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="75dp"
        android:backgroundTint="#ACC2DC"
        android:text="Cerrar Sesión" />

</RelativeLayout>