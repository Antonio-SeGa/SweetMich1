        <Button
            android:id="@+id/btnAddresse"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:onClick="onCLick"
            android:text="@string/direcci_n"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_location" />

        <Button
            android:id="@+id/btnCards"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="@string/tarjetas"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:onClick="onCLick"
            app:icon="@drawable/ic_baseline_credit_card" />

        <Button
            android:id="@+id/btnChanPass"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:onClick="onCLick"
            android:text="@string/cambio_de_contrasena"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_baseline_key" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#F6A4BC"
            android:text="@string/acercade"
            android:textColor="#FFFFFF"
            android:textAlignment="viewStart"
            android:onClick="onCLick"
            app:icon="@drawable/ic_baseline_info" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="75dp"
            android:backgroundTint="#ACC2DC"
            android:text="@string/cerrar_sesion"
            android:textColor="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>